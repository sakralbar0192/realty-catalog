{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS=\"--disable-warning=ExperimentalWarning --disable-warning=DeprecationWarning\" nuxt build",
    "dev": "NODE_OPTIONS=\"--disable-warning=ExperimentalWarning --disable-warning=DeprecationWarning\" nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --ext .vue,.js,.ts",
    "lint:fix": "eslint . --ext .vue,.js,.ts --fix",
    "lint:check": "eslint . --ext .vue,.js,.ts --max-warnings 0",
    "stylelint": "stylelint '**/*.{vue,scss,css}'",
    "stylelint:fix": "stylelint '**/*.{vue,scss,css}' --fix",
    "stylelint:check": "stylelint '**/*.{vue,scss,css}' --max-warnings 0",
    "html-validate": "html-validate '**/*.{html,vue}'",
    "html-validate:fix": "html-validate '**/*.{html,vue}' --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "storybook": "NODE_OPTIONS=\"--disable-warning=ExperimentalWarning --disable-warning=DeprecationWarning\" storybook dev -p 6006",
    "storybook:build": "NODE_OPTIONS=\"--disable-warning=ExperimentalWarning --disable-warning=DeprecationWarning\" storybook build",
    "storybook:serve": "NODE_OPTIONS=\"--disable-warning=ExperimentalWarning --disable-warning=DeprecationWarning\" npx serve storybook-static",
    "analyze": "ANALYZE=true bun run build",
    "analyze:serve": "bun run analyze && npx serve dist",
    "typecheck": "nuxt typecheck",
    "quality": "node scripts/quality-check.js",
    "ci": "node scripts/ci.js",
    "quality:fix": "bun run lint:fix && bun run stylelint:fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.{scss,css,vue}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@nuxt/fonts": "0.11.4",
    "@nuxt/image": "1.11.0",
    "@nuxtjs/i18n": "^10.1.0",
    "@pinia/nuxt": "^0.11.2",
    "nuxt": "^3.19.2",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@mswjs/data": "^0.16.2",
    "@nuxt/eslint-config": "^1.9.0",
    "@nuxtjs/storybook": "^9.0.1",
    "@playwright/test": "^1.55.0",
    "@storybook/addon-a11y": "^9.0.5",
    "@storybook/addon-docs": "^9.0.5",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-vitest": "^9.0.5",
    "@storybook/vue3": "^9.0.5",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.36.0",
    "eslint-plugin-storybook": "^9.1.7",
    "eslint-plugin-vue": "^10.4.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "happy-dom": "^18.0.1",
    "html-validate": "^10.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "msw": "^2.11.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.93.0",
    "storybook": "9.0.5",
    "stylelint": "^16.24.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "vite-bundle-analyzer": "^1.2.3",
    "vitest": "^3.2.4",
    "web-vitals": "^5.1.0"
  }
}
